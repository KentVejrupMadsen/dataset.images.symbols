* text=auto eol=lf

# Default file extensions
*.md text diff=markdown eol=crlf

*.sh text diff=sh export-ignore
*.ps1 text diff=ps1 export-ignore eol=crlf

*.py text diff=python
*.ipynb text diff=ipynb

*.json text diff=json
*.yml text diff=yml
*.svg text diff=svg eol=crlf

.toml text diff=toml eol=lf export-ignore

# Image files
*.jpg binary diff=exif
*.jpeg binary diff=exif
*.png binary diff=exif
*.bmp binary diff=exif

# Git attributes
.gitignore text diff=gitignore eol=lf export-ignore
.gitattributes text diff=gitattributes eol=lf export-ignore
.gitmodules text diff=gitmodules export-ignore

# Directories
/.github export-ignore
notebooks export-ignore 
